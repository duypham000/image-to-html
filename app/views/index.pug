			+group()
				.btnc 
					i.fal.fa-bell
				.btnc 
					i.far.fa-comment
				.btnc 
					i.far.fa-bookmark
				.btnc 	
					.avt 	
						img(src="/images/avt.jpg", alt="alt")
		.sideBar-right__friendReq
			+group("Friend Request", "check")
				+item("#", "/images/FBI.jpg", "FBI", "1 Mutual friends", "menu")
			a(href="#").btnc.sideBar-right__friendReq-showmore Show more
		.sideBar-right__setting
