extends layout/layout

block vars
	-title = 'Social Media'
	-bodyClass = 'home-page'

mixin group(title,typebtn,link)
	.container.grpCtn
		h3.title= title
		.list 
			block
		if typebtn == "showmore"
			a(href=link).btnc.btnc--cir Show more
		if typebtn == "check"
			.chose 
				.btnc.btnc--cir.accpt
					i.fas.fa-check
				.btnc.btnc--cir.dennd
					i.fas.fa-times
mixin item(href,img, name, desc, type, time)
	a(href=href).container.itmCtn 
		.avt 
			img(src=img, alt="alt")
		.detail 
			h3= name 
			p= desc
		if type == "active"
			if time 
				.active=time
			else 
				.active.now
		if type == "arrow"
			.arr
				i.fas.fa-chevron-right
		if type == "menu" 
			.menu
				i.fas.fa-ellipsis-v
mixin setting-item(name, type)
	a(href="#").container.sttctn 
		h3=name
		if type == "arrow"
			.arr 
				i.fas.fa-chevron-right
		if type =="check"
			.checkbox
		
block container
	.mainCtn 
		header.navbar 
			.navbar__search
				form(action="" method="method")
					.input-group
						input.form-control(type="text", placeholder="Search...", aria-label="Search...", aria-describedby="search")
						button.btn#search(type="summit") 					
							i.fas.fa-search
			.navbar__menu
				a(href="#").navbar__menu-item.active
					i.fas.fa-archway
				a(href="#").navbar__menu-item
					i.fab.fa-artstation
				a(href="#").navbar__menu-item
					i.fab.fa-apple
				a(href="#").navbar__menu-item
					i.fas.fa-apple-alt
				a(href="#").navbar__menu-item
					i.fas.fa-atlas
		section.newsFeed
			.newsFeed__updateActivity 
				h2.newsFeed__updateActivity-title Update your activity
				.newsFeed__updateActivity-status 
					.form-floating
						textarea.form-control(placeholder="How about your feelings, Diu?")
				.newsFeed__updateActivity-option
					a(href="#").item Photos/videos
						i.far.fa-image
					a(href="#").item Live Streaming
						i.far.fa-video
			.newsFeed__forYou
				h2.newsFeed__forYou-title For you
				.newsFeed__forYou-list 
					.newsFeed__forYou-list--item 
						.newsFeed__forYou-list--item_menu
							.avt
								img(src="/images/avt.jpg", alt="alt")
							.detail 
								.detail__name Diu Gaming
								.detail__desc Dev 
									span 
									a(href="#") Ads
							.btnc.btnc--cir 
								i.fas.fa-plus
								p Subscribe
							.menu 
								i.fas.fa-ellipsis-v
						.newsFeed__forYou-list--item_main 
							img(src="/images/streamScr.jpg", alt="alt")
						.newsFeed__forYou-list--item_react 
							.btnc.btnc--cir 
								i.fas.fa-heart
								span 789
								p Like
							.btnc.btnc--cir
								i.fas.fa-comment-alt
								span 456
								p Comment
							.btnc.btnc--cir
								i.fas.fa-share-alt
								span 123 
								p Share
	section.sideBar.sideBar-left 
		.sideBar-left__friends 
			+group("Friends", "showmore", "#")
				+item("#", "/images/avt.jpg", "Diu", "@diu", "active")
				+item("#", "/images/avt.jpg", "Khanh", "@khanh", "active")
				+item("#", "/images/avt.jpg", "Duyn", "@duyn", "active", "5m")
				+item("#", "/images/avt.jpg", "Pham", "@pham", "active", "15m")
		.sideBar-left__group
			+group("Group", "showmore", "#")
				+item("#", "/images/full.jpg", "Full snack overflow", "we are the best", "arrow")
				+item("#", "/images/nasa.jpg", "Html hack nasa", "Æ°hatsup!", "arrow")
	section.sideBar.sideBar-right
